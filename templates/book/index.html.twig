{% extends 'base.html.twig' %}

{% block title %}Books{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto py-10">

    <h1 class="text-3xl font-bold mb-6 text-gray-800">Books</h1>

    <div class="mb-5">
        <a 
            href="{{ path('app_book_new') }}" 
            class="inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition"
        >
            + Create new
        </a>
    </div>

    <div class="overflow-x-auto bg-white shadow rounded-lg">
        <table class="min-w-full text-left text-sm">
            <thead class="bg-gray-100 text-gray-700 uppercase text-xs font-semibold">
                <tr>
                    <th class="px-6 py-3">ID</th>
                    <th class="px-6 py-3">Title</th>
                    <th class="px-6 py-3">Description</th>
                    <th class="px-6 py-3">Pages</th>
                    <th class="px-6 py-3">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                {% for book in books %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4">{{ book.id }}</td>
                    <td class="px-6 py-4 font-medium text-gray-900">{{ book.title }}</td>
                    <td class="px-6 py-4 text-gray-700">{{ book.description }}</td>
                    <td class="px-6 py-4">{{ book.pageNumber }}</td>
                    <td class="px-6 py-4 flex gap-3">
                        <a 
                            href="{{ path('app_book_show', {'id': book.id}) }}"
                            class="text-blue-600 hover:text-blue-800 font-medium transition"
                        >
                            Show
                        </a>
                        <a 
                            href="{{ path('app_book_edit', {'id': book.id}) }}"
                            class="text-yellow-600 hover:text-yellow-800 font-medium transition"
                        >
                            Edit
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="px-6 py-4 text-center text-gray-500">
                        No records found
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
