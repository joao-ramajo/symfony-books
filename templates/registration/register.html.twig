{% extends 'base.html.twig' %}

{% form_theme registrationForm 'forms/tailwind_form_theme.html.twig' %}

{% block body %}
    <div class="max-w-md mx-auto mt-10 bg-white p-8 shadow rounded-xl">
        <h1 class="text-2xl font-bold mb-6">Register</h1>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.agreeTerms) }}
            {{ form_row(registrationForm.plainPassword) }}

            <button
                class="w-full mt-4 py-2 px-4 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition"
            >
                Registrar
            </button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
