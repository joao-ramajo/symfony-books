<div x-data="{ open: false }" class="relative">

	<div 
		class="bg-white shadow-md rounded-xl p-6 hover:shadow-lg transition h-[180px] relative cursor-pointer"
		@click="open = !open"
		@click.outside="open = false"
	>

		<h2 class="text-xl font-semibold text-gray-800 mb-2">
			{{ book.title }}
		</h2>

		<p class="text-gray-600 mb-1 h-[50px] truncate">
			<span class="font-medium">Description:</span>
			{{ book.description }}
		</p>

		<p class="text-gray-600 mb-8">
			<span class="font-medium">Pages:</span>
			{{ book.pageNumber }}
		</p>

		<!-- BotÃ£o falso (decorativo) -->
		<div 
			class="absolute bottom-3 right-3 px-3 py-1.5 text-sm bg-gray-100 text-gray-600 rounded-lg border border-gray-300
				   hover:bg-gray-200 hover:text-gray-700 transition select-none pointer-events-none">
			Show
		</div>

	</div>

	<twig:Modal :book="book"/>
</div>
